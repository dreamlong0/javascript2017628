<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <link rel="stylesheet" href="bootstrap.css">
</head>
<body>
<div class="container" onsubmit="return false" style="margin-top: 50px;">
    <form class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-10">
                <input type="text" class="form-control username" id="username" name="username" value="" placeholder="请输入用户名">
            </div>
            <div class="col-sm-2">
                <button type="button" class="btn btn-default">注册</button>
            </div>
        </div>
    </form>
</div>
<script src="jquery.js"></script>
<script>
    //点击按钮的进行注册；
    $('.btn').click(function () {
        $.ajax({
            url:'/doReg',
            data:$('form').serialize(),
            success:function (val) {
                if(val.res){
                    alert(val.des);
                    window.location.href="/";
                }else{
                    alert(val.des)
                }
            }
        })
    })
    $(document).on('keypress',e=>{
        if(e.keyCode===13){
            $('.btn').trigger('click');
        }
    })
</script>
</body>
</html>